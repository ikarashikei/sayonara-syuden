<Files ~ "^\.(htaccess|htpasswd)$">
deny from all
</Files>
Options -Indexes
RewriteEngine on
RewriteCond %{THE_REQUEST} ^.*/index.html
RewriteRule ^(.*)index.html$ http://syuden.com/$1 [R=301,L]
RewriteCond %{HTTP_HOST} ^(www\.syuden\.com\/)(:80)? [NC]
RewriteRule ^(.*) http://syuden.com/$1 [R=301,L]
order deny,allow
